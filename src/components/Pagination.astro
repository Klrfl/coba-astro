---
const { page } = Astro.props;
const BASE_URL = import.meta.env.BASE_URL;
---

<base href={BASE_URL} />

<footer class="pagination">
  <a class="start" href={`${BASE_URL}/tugas`}>Ke tugas pertama</a>
  {
    page.url.prev ? (
      <a class="prev" href={`${BASE_URL}${page.url.prev}`}>
        Ke tugas sebelumnya ({page.currentPage - 1})
      </a>
    ) : null
  }
  {
    page.url.next ? (
      <a class="next" href={`${BASE_URL}${page.url.next}`}>
        Ke tugas selanjutnya ({page.currentPage + 1})
      </a>
    ) : null
  }
  <a href={`${BASE_URL}/tugas/${page.lastPage}`} class="end"
    >Ke tugas terakhir</a
  >
</footer>

<style>
  .pagination {
    margin-top: auto;
    padding: 1rem;

    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .pagination a {
    background: #ededed;
    outline: 2px solid rgb(var(--accent));
    border-radius: 0.5rem;
    display: inline-block;
    padding: 1rem;
    color: inherit;
    text-decoration: none;
    text-align: center;
    transition: background 200ms ease;
  }

  .pagination a:hover {
    background: rgb(var(--accent));
    color: #ddd;
  }

  @media screen and (min-width: 50em) {
    .pagination {
      padding: 2rem;
      display: grid;
      grid-template-areas: "start prev next end";
      gap: 2rem;
    }

    .pagination a {
      line-height: 4rem;
    }

    .start {
      grid-area: start;
    }

    .prev {
      grid-area: prev;
    }

    .next {
      grid-area: next;
    }

    .end {
      grid-area: end;
    }
  }
</style>
