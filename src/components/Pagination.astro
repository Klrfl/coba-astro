---
const { page } = Astro.props;
---

<base href={import.meta.env.BASE_URL} />

<div class="pagination">
  {
    page.url.prev ? (
      <a href={`${import.meta.env.BASE_URL}${page.url.prev}`}>
        {page.currentPage - 1}
      </a>
    ) : null
  }
  {
    page.url.next ? (
      <a href={`${import.meta.env.BASE_URL}${page.url.next}`}>
        {page.currentPage + 1}
      </a>
    ) : null
  }
</div>

<style>
  .pagination {
    background: #ddd;
    padding: 2rem;

    display: flex;
    justify-content: center;
  }

  .pagination a {
    display: inline-block;
    padding: 1rem;
  }
</style>
