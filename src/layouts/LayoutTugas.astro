---
import Layout from "./Layout.astro";
import TaskDesc from "../components/TaskDesc.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.judul} description={frontmatter.deskripsi}>
  <div class="wrapper">
    <TaskDesc
      perintah={frontmatter.perintah}
      deskripsi={frontmatter.deskripsi}
    />
    <main>
      <slot name="kode" />

      <article class="hasil">
        <Fragment set:html={frontmatter.kode} />
      </article>
    </main>
    <slot />
  </div>
</Layout>

<style>
  .wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    padding: 2rem;
  }

  @media screen and (min-width: 50em) {
    main {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
</style>
